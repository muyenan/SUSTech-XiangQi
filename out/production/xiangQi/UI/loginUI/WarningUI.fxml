<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="550.0" spacing="20.0" style="-fx-background-color: #FFFaf0; -fx-background-radius: 15; -fx-border-radius: 15;" stylesheets="@../../Resource/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.loginUI.WarningController">
    <children>
        <Label styleClass="warning-title" text="警告 ⚠️">
            <effect>
                <DropShadow blurType="ONE_PASS_BOX" offsetY="2.0" radius="2.0" width="5.0">
                    <color><Color opacity="0.3" /></color>
                </DropShadow>
            </effect>
        </Label>
        <Label alignment="CENTER" styleClass="warning-text" text="游客登录模式无法存档，&#10;您确定要继续吗？" wrapText="true">
            <VBox.margin>
                <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" spacing="40.0">
            <children>
                <Button fx:id="returnBackButton" onAction="#handleReturnBack" prefHeight="40.0" prefWidth="150.0" styleClass="hint-button2" text="返回" />
                <Button fx:id="continueButton" onAction="#handleContinue" prefHeight="40.0" prefWidth="150.0" styleClass="hint-button1" text="继续" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
    </padding>
    <effect>
        <DropShadow color="#00000040" radius="10.0" spread="0.1" />
    </effect>
</VBox>

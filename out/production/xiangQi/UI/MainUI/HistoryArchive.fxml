<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MainUI.HistoryArchiveController" stylesheets="@../../Resource/style.css">
    <left>
        <StackPane prefWidth="450">
            <Canvas fx:id="previewChessBoardCanvas" height="500" width="480.0" StackPane.alignment="CENTER" />
        </StackPane>
    </left>
    <center>
        <StackPane alignment="TOP_CENTER" prefWidth="350">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 3);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <HBox alignment="TOP_LEFT" spacing="15">
                    <ImageView fx:id="AvatarImageView" fitHeight="64" fitWidth="64" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.3, 0, 2);">
                        <image>
                            <Image url="@../../Resource/DefaultAvatar.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="welcomeLabel" text="欢迎，玩家" wrapText="true" styleClass="welcome-label"/>
                </HBox>
                <Label text="历史存档" textFill="RED" styleClass="game-label"/>
                <ListView fx:id="saveFilesListView" prefHeight="200" prefWidth="280" styleClass="game-listview"/>
                <VBox alignment="CENTER" prefWidth="280" spacing="15">
                    <Button fx:id="startGameButton" onAction="#handleStartGame" prefHeight="35" prefWidth="220" style="-fx-background-color: #8b4513; -fx-text-fill: white; -fx-background-radius: 8;" text="开始游戏" styleClass="game-button-large"/>
                    <Button fx:id="deleteButton" onAction="#handleDelete" prefHeight="35" prefWidth="220" style="-fx-background-color: #d9a066; -fx-text-fill: white; -fx-background-radius: 8;" text="删除存档" styleClass="game-button-large"/>
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="importButton" onAction="#handleImport" prefHeight="35" prefWidth="105" style="-fx-background-color: #a9a9a9; -fx-text-fill: white; -fx-background-radius: 8;" text="导入" styleClass="game-button-medium"/>
                        <Button fx:id="exportButton" onAction="#handleExport" prefHeight="35" prefWidth="105" style="-fx-background-color: #a9a9a9; -fx-text-fill: white; -fx-background-radius: 8;" text="导出" styleClass="game-button-medium"/>
                    </HBox>
                    <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="35" prefWidth="220" style="-fx-background-color: #c0c0c0; -fx-text-fill: black; -fx-background-radius: 8;" text="返回" styleClass="game-button-medium"/>
                </VBox>
                <Region prefHeight="20" />
                <HBox alignment="BOTTOM_RIGHT" prefHeight="8.0" prefWidth="280.0">
                    <children>
                        <Button fx:id="muteButton" contentDisplay="TOP" onAction="#handleMuteAction" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 0;" />
                    </children>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
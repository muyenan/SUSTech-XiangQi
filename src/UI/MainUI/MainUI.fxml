<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500" prefWidth="800" style="-fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 3); -fx-background-color: rgba(255,255,255,0.85);" stylesheets="@../../Resource/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MainUI.MainController">
    <left>
        <StackPane prefWidth="450">
            <Canvas fx:id="goBoardCanvas" height="500.0" width="450" StackPane.alignment="CENTER" />
            <ImageView fitHeight="500.0" fitWidth="480.0">
                <image>
                    <Image url="@../../Resource/chessboard.png" />
                </image>
            </ImageView>
        </StackPane>
    </left>
    <center>
        <StackPane alignment="TOP_CENTER" prefWidth="350">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 3);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <HBox alignment="TOP_LEFT" spacing="15">
                    <ImageView fx:id="AvatarImageView" fitHeight="64" fitWidth="64" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 6, 0.3, 0, 2);">
                        <image>
                            <Image url="@../../Resource/DefaultAvatar.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="welcomeLabel" styleClass="welcome-label" text="欢迎，" wrapText="true" />
                </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="15">
                     <children>
                        <Label fx:id="SignUpLabel" styleClass="info-label" text="注册时间：" wrapText="true" />
                        <Label fx:id="LastLoginLabel" styleClass="info-label" text="上次登录：" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
                <Region prefHeight="20.0" />
                <VBox alignment="CENTER" spacing="15">
                    <Button fx:id="AIBattleButton" onAction="#handleAIBattle" prefHeight="35" prefWidth="220" style="-fx-background-color: #8b4513; -fx-text-fill: white; -fx-background-radius: 8;" styleClass="game-button-large" text="人机对战" />
                    <Button fx:id="QuickGameButton" onAction="#handleQuickGame" prefHeight="35" prefWidth="220" style="-fx-background-color: #d9a066; -fx-text-fill: white; -fx-background-radius: 8;" styleClass="game-button-large" text="快速游戏" />
                    <Button fx:id="HistoryButton" onAction="#handleHistory" prefHeight="35" prefWidth="220" style="-fx-background-color: #c0c0c0; -fx-text-fill: black; -fx-background-radius: 8;" styleClass="game-button-medium" text="历史存档" />
               <Hyperlink fx:id="LogOutLink" onAction="#handleLogOut" styleClass="hint-link" text="注销登录" />
                </VBox>
                <Region prefHeight="20" />
            <HBox alignment="BOTTOM_RIGHT" prefHeight="8.0" prefWidth="280.0">
               <children>
                     <Button fx:id="muteButton" contentDisplay="TOP" onAction="#handleMuteAction" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 0;" />
               </children>
            </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>

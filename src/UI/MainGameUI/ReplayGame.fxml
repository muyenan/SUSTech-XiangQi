<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500" prefWidth="770" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.MainGameUI.ReplayGameController" stylesheets="@../../Resource/style.css">
    <left>
        <StackPane prefWidth="450">
            <Canvas fx:id="chessBoardCanvas" height="500" width="480.0" StackPane.alignment="CENTER" />
        </StackPane>
    </left>
    <center>
        <StackPane alignment="TOP_CENTER" prefWidth="320">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: rgba(255,255,255,0.85);                          -fx-background-radius: 15;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 3);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Label text="对局回放" styleClass="welcome-label"/>
                <Label fx:id="moveInfoLabel" text="第 0/0 步" styleClass="info-label"/>
                <Region prefHeight="20" />
                <VBox alignment="CENTER" prefWidth="280" spacing="15">
                    <Button onAction="#handlePrevMove" prefHeight="35" prefWidth="220" style="-fx-background-color: #8b4513; -fx-text-fill: white; -fx-background-radius: 8;" text="上一步" styleClass="game-button-large"/>
                    <Button onAction="#handleNextMove" prefHeight="35" prefWidth="220" style="-fx-background-color: #d9a066; -fx-text-fill: white; -fx-background-radius: 8;" text="下一步" styleClass="game-button-large"/>
                    <Button onAction="#handleBackToMenu" prefHeight="35" prefWidth="220" style="-fx-background-color: #c0c0c0; -fx-text-fill: black; -fx-background-radius: 8;" text="返回主界面" styleClass="game-button-medium"/>
                </VBox>
                <Region prefHeight="20" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>